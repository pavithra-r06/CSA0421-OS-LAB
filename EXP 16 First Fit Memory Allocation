#include <stdio.h>

int main() {
    int m, p;

    printf("Enter number of memory blocks: ");
    scanf("%d", &m);

    int block[m];
    printf("Enter block sizes:\n");
    for (int i = 0; i < m; i++)
        scanf("%d", &block[i]);

    printf("Enter number of processes: ");
    scanf("%d", &p);

    int process[p];
    printf("Enter process sizes:\n");
    for (int i = 0; i < p; i++)
        scanf("%d", &process[i]);

    int allocation[p];
    for (int i = 0; i < p; i++)
        allocation[i] = -1;

    for (int i = 0; i < p; i++) {
        for (int j = 0; j < m; j++) {
            if (block[j] >= process[i]) {
                allocation[i] = j;
                block[j] -= process[i];
                break;
            }
        }
    }

    printf("\nProcess\tSize\tBlock\n");
    for (int i = 0; i < p; i++) {
        printf("%d\t%d\t", i + 1, process[i]);
        if (allocation[i] != -1)
            printf("%d\n", allocation[i] + 1);
        else
            printf("Not Allocated\n");
    }

    return 0;
}
