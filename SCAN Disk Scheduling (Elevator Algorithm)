#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, disk_size;

    printf("Enter disk size: ");
    scanf("%d", &disk_size);

    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter requests:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    int dir;
    printf("Enter direction (0 = left, 1 = right): ");
    scanf("%d", &dir);

    int total = 0;
    int visited[n];
    for (int i = 0; i < n; i++)
        visited[i] = 0;

    while (1) {
        int closest = -1, closest_dist = 9999;

        for (int i = 0; i < n; i++) {
            if (!visited[i]) {
                int d = req[i] - head;
                if ((dir == 1 && d >= 0) || (dir == 0 && d <= 0)) {
                    int dist = abs(d);
                    if (dist < closest_dist) {
                        closest_dist = dist;
                        closest = i;
                    }
                }
            }
        }

        if (closest == -1) {
            if (dir == 1) {
                total += abs(disk_size - 1 - head);
                head = disk_size - 1;
            } else {
                total += abs(head - 0);
                head = 0;
            }
            dir = 1 - dir;
            continue;
        }

        total += abs(req[closest] - head);
        head = req[closest];
        visited[closest] = 1;

        int done = 1;
        for (int i = 0; i < n; i++)
            if (!visited[i])
                done = 0;
        if (done)
            break;
    }

    printf("Total head movement = %d\n", total);
    return 0;
}
