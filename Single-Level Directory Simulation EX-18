#include <stdio.h>
#include <string.h>

int main() {
    int n;
    printf("Enter max number of files: ");
    scanf("%d", &n);

    char dir[n][20];
    int count = 0;

    while (1) {
        int choice;
        printf("\n1. Create File\n2. Search File\n3. Delete File\n4. Exit\n");
        scanf("%d", &choice);

        if (choice == 1) {
            if (count == n) {
                printf("Directory full\n");
            } else {
                char name[20];
                printf("Enter filename: ");
                scanf("%s", name);
                strcpy(dir[count++], name);
                printf("File created\n");
            }
        } 
        else if (choice == 2) {
            char name[20];
            printf("Enter filename to search: ");
            scanf("%s", name);

            int found = 0;
            for (int i = 0; i < count; i++)
                if (strcmp(dir[i], name) == 0)
                    found = 1;

            printf(found ? "File found\n" : "File not found\n");
        }
        else if (choice == 3) {
            char name[20];
            printf("Enter filename to delete: ");
            scanf("%s", name);

            int found = -1;
            for (int i = 0; i < count; i++)
                if (strcmp(dir[i], name) == 0)
                    found = i;

            if (found == -1) {
                printf("File not found\n");
            } else {
                for (int i = found; i < count - 1; i++)
                    strcpy(dir[i], dir[i + 1]);
                count--;
                printf("File deleted\n");
            }
        }
        else {
            break;
        }
    }

    return 0;
}
